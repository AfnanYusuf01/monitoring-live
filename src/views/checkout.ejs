    <script>
        // Fungsi untuk memformat nomor WhatsApp
        function formatNomorWA(input) {
            // Hapus semua karakter non-digit
            let value = input.value.replace(/\D/g, '');
            
            // Jika diawali dengan 0, ganti dengan 62
            if (value.startsWith('0')) {
                value = '62' + value.substring(1);
            }
            // Jika diawali dengan 8, tambahkan 62 di depan
            else if (value.startsWith('8')) {
                value = '62' + value;
            }
            // Jika diawali dengan +62, hapus tanda +
            else if (value.startsWith('+62')) {
                value = value.substring(1);
            }
            // Pastikan selalu diawali dengan 62
            else if (!value.startsWith('62') && value.length > 0) {
                value = '62' + value;
            }
            
            // Batasi panjang maksimum 15 digit (62 + 13 digit)
            if (value.length > 15) {
                value = value.substring(0, 15);
            }
            
            // Update nilai input
            input.value = value;
        }

        // Fungsi validasi nomor WhatsApp
        function validateNomorWA(nomor) {
            const regex = /^62\d{9,13}$/;
            return regex.test(nomor);
        }

        // Format angka ke Rupiah
        function formatRupiah(angka) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(angka);
        }

        // Fungsi untuk mengambil metode pembayaran dari API
        async function fetchPaymentMethods() {
            const loadingEl = document.getElementById('paymentMethodsLoading');
            const containerEl = document.getElementById('paymentMethodsContainer');
            const errorEl = document.getElementById('paymentMethodsError');
            
            // Tampilkan loading, sembunyikan container dan error
            loadingEl.classList.remove('hidden');
            containerEl.classList.add('hidden');
            errorEl.classList.add('hidden');
            
            try {
                const response = await fetch('/api/payment-methods');
                const data = await response.json();
                
                if (data.success && data.data && data.data.length > 0) {
                    // Sembunyikan loading, tampilkan container
                    loadingEl.classList.add('hidden');
                    containerEl.classList.remove('hidden');
                    
                    // Render metode pembayaran
                    renderPaymentMethods(data.data);
                } else {
                    throw new Error('Data metode pembayaran tidak valid');
                }
            } catch (error) {
                console.error('Error fetching payment methods:', error);
                
                // Sembunyikan loading, tampilkan error
                loadingEl.classList.add('hidden');
                errorEl.classList.remove('hidden');
            }
        }

        // Fungsi untuk merender metode pembayaran
        function renderPaymentMethods(methods) {
            const container = document.getElementById('paymentMethodsContainer');
            container.innerHTML = '';
            
            methods.forEach(method => {
                const methodElement = document.createElement('div');
                methodElement.className = 'payment-method relative border border-secondary-200 rounded-lg p-3 cursor-pointer hover:border-primary-500 bg-white';
                methodElement.dataset.method = method.pgCode;
                methodElement.dataset.name = method.name;
                methodElement.dataset.image = method.imageUrl;
                
                methodElement.innerHTML = `
                    <div class="flex flex-col items-center">
                        <img src="${method.imageUrl}" alt="${method.name}" class="h-6 mb-2 object-contain">
                        <span class="text-xs text-secondary-700 text-center font-medium">${method.name}</span>
                    </div>
                    <div class="absolute top-2 right-2 hidden check-icon">
                        <i class="fas fa-check-circle text-primary-600"></i>
                    </div>
                `;
                
                methodElement.addEventListener('click', () => selectPaymentMethod(methodElement));
                container.appendChild(methodElement);
            });
        }

        // Fungsi untuk memilih metode pembayaran
        function selectPaymentMethod(element) {
            // Hapus seleksi sebelumnya
            document.querySelectorAll('.payment-method').forEach(el => {
                el.classList.remove('border-primary-500', 'bg-primary-50');
                el.querySelector('.check-icon').classList.add('hidden');
            });
            
            // Tambahkan seleksi pada elemen yang diklik
            element.classList.add('border-primary-500', 'bg-primary-50');
            element.querySelector('.check-icon').classList.remove('hidden');
            
            // Tampilkan info metode yang dipilih
            const selectedMethodInfo = document.getElementById('selectedMethodInfo');
            const selectedMethodImage = document.getElementById('selectedMethodImage');
            const selectedMethodName = document.getElementById('selectedMethodName');
            
            selectedMethodImage.src = element.dataset.image;
            selectedMethodName.textContent = element.dataset.name;
            selectedMethodInfo.classList.remove('hidden');
            
            // Aktifkan tombol bayar
            document.getElementById('payButton').disabled = false;
        }

        // Fungsi untuk menampilkan modal konfirmasi sederhana
        function showConfirmationModal() {
            const modal = document.getElementById('confirmationModal');
            modal.style.display = 'block';
            
            // Setup event listeners untuk tombol modal
            document.getElementById('confirmPayment').onclick = () => {
                modal.style.display = 'none';
                processPayment();
            };
            
            document.getElementById('cancelPayment').onclick = () => {
                modal.style.display = 'none';
            };
            
            document.getElementById('closeConfirmation').onclick = () => {
                modal.style.display = 'none';
            };
            
            window.onclick = (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            };
        }

function processPayment() {
    const selectedMethod = document.querySelector('.payment-method.border-primary-500');
    if (!selectedMethod) return showNotification('Pilih metode pembayaran', 'error');

    const paymentMethod = selectedMethod.dataset.method;
    
    // Debug: cek data subscription
    console.log('Subscription object:', subscription);
    console.log('Subscription ID:', subscription.id);
    
    // Gunakan ID yang benar
    const subscriptionId = subscription.id || subscription.subscriptionId || subscription._id;
    
    if (!subscriptionId) {
        showNotification('ID subscription tidak ditemukan', 'error');
        return;
    }
    
    // Membuat URL dengan parameter yang diperlukan
    const url = `/subscription/buy/${subscriptionId}?method=${paymentMethod}&price=${subscription.price}&limitAkun=${subscription.limitAkun}&duration=${subscription.duration}`;

    fetch(url, {
        method: "POST"
    })
    .then(res => res.json())
    .then(data => {
        if (data.paymentUrl) {
            // Redirect ke payment gateway untuk pembayaran berbayar
            window.location.href = data.paymentUrl;
        } else if (data.redirect) {
            // Redirect ke halaman thank-you-free untuk pembayaran gratis
            window.location.href = data.redirect;
        } else {
            showNotification(data.message || "Gagal membuat transaksi", 'error');
        }
    })
    .catch(err => {
        console.error(err);
        showNotification("Gagal membuat transaksi", 'error');
    });
}

        // Fungsi untuk menangani pembayaran
        function handlePayment() {
            // Cek apakah user sudah login
            if (!user) {
                showNotification('Silakan login terlebih dahulu', 'error');
                document.getElementById('showAuthModal').click();
                return;
            }

            const selectedMethod = document.querySelector('.payment-method.border-primary-500');
            if (!selectedMethod) return showNotification('Pilih metode pembayaran', 'error');

            // Tampilkan modal konfirmasi sederhana
            showConfirmationModal();
        }

        // Fungsi untuk menampilkan notifikasi
        function showNotification(message, type) {
            // Hapus notifikasi sebelumnya jika ada
            const existingNotification = document.getElementById('notification');
            if (existingNotification) {
                existingNotification.remove();
            }
            
            const notification = document.createElement('div');
            notification.id = 'notification';
            notification.className = `fixed top-4 right-4 z-50 px-4 py-3 rounded-lg shadow-lg text-white font-medium transition-opacity duration-300 ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            }`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Hapus notifikasi setelah 3 detik
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        // Fungsi untuk mengelola modal login/register
        function setupAuthModal() {
            const modal = document.getElementById('authModal');
            const showAuthModalBtn = document.getElementById('showAuthModal');
            const closeBtn = document.querySelector('.close');
            const formTabs = document.querySelectorAll('.form-tab');
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const loginFormElement = document.getElementById('loginFormElement');
            const registerFormElement = document.getElementById('registerFormElement');

            // Buka modal
            if (showAuthModalBtn) {
                showAuthModalBtn.addEventListener('click', () => {
                    modal.style.display = 'block';
                });
            }

            // Tutup modal
            closeBtn.addEventListener('click', () => {
                modal.style.display = 'none';
            });

            // Tutup modal jika klik di luar konten
            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });

            // Toggle antara form login dan register
            formTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const formType = tab.dataset.form;
                    
                    // Update tab aktif
                    formTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    
                    // Tampilkan form yang sesuai
                    if (formType === 'login') {
                        loginForm.classList.add('active');
                        registerForm.classList.remove('active');
                    } else {
                        loginForm.classList.remove('active');
                        registerForm.classList.add('active');
                    }
                });
            });

            // Handle form login
            loginFormElement.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const email = document.getElementById('loginEmail').value;
                const password = document.getElementById('loginPassword').value;
                
                fetch('/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Login berhasil', 'success');
                        setTimeout(() => {
                            location.reload(); // Reload halaman untuk update status user
                        }, 1500);
                    } else {
                        showNotification(data.message || 'Login gagal', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Terjadi kesalahan saat login', 'error');
                });
            });

            // Handle form register
            registerFormElement.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const name = document.getElementById('registerName').value;
                const email = document.getElementById('registerEmail').value;
                const password = document.getElementById('registerPassword').value;
                const nomor_wa = document.getElementById('registerPhone').value;
                
                // Validasi nomor WhatsApp
                if (!validateNomorWA(nomor_wa)) {
                    showNotification('Format nomor WhatsApp tidak valid. Harus diawali dengan 62 dan terdiri dari 11-15 digit', 'error');
                    return;
                }
                
                fetch('/api/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name, email, password, nomor_wa})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Registrasi berhasil', 'success');
                        setTimeout(() => {
                            location.reload(); // Reload halaman untuk update status user
                        }, 1500);
                    } else {
                        showNotification(data.message || 'Registrasi gagal', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Terjadi kesalahan saat registrasi', 'error');
                });
            });
        }

        // Fungsi untuk handle logout
        function setupLogout() {
            const logoutBtn = document.getElementById('logoutBtn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', () => {
                    fetch('/api/logout', {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showNotification('Logout berhasil', 'success');
                            setTimeout(() => {
                                location.reload(); // Reload halaman untuk update status user
                            }, 1500);
                        } else {
                            showNotification(data.message || 'Logout gagal', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showNotification('Terjadi kesalahan saat logout', 'error');
                    });
                });
            }
        }

        // Inisialisasi saat halaman dimuat
        document.addEventListener('DOMContentLoaded', function() {
            // Setup modal login/register
            setupAuthModal();
            
            // Setup logout
            setupLogout();
            
            // Event listener untuk tombol bayar
            document.getElementById('payButton').addEventListener('click', handlePayment);
            
            // Event listener untuk tombol retry
            document.getElementById('retryPaymentMethods').addEventListener('click', fetchPaymentMethods);
            
            // Nonaktifkan tombol bayar sampai metode dipilih
            document.getElementById('payButton').disabled = true;
            
            // Jika user belum login, nonaktifkan tombol bayar
            if (!user) {
                document.getElementById('payButton').disabled = true;
            }
            
            // Ambil metode pembayaran dari API
            fetchPaymentMethods();
        });
    </script>
