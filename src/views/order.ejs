<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#f0f9ff',
              100: '#e0f2fe',
              500: '#0ea5e9',
              600: '#0284c7',
              700: '#0369a1',
            },
            success: {
              50: '#f0fdf4',
              500: '#22c55e',
              600: '#16a34a',
            }
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      min-height: 100vh;
    }
    .card {
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      border-radius: 16px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 30px -10px rgba(0, 0, 0, 0.15);
    }
    .countdown {
      font-variant-numeric: tabular-nums;
      font-weight: 700;
    }
    .bank-logo {
      filter: grayscale(100%) contrast(60%);
      transition: all 0.3s ease;
    }
    .bank-card:hover .bank-logo {
      filter: grayscale(0%) contrast(100%);
    }
    .pulse {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
    .fade-in {
      animation: fadeIn 0.8s ease-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm py-4">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center mr-3">
            <i class="fas fa-shopping-cart text-white"></i>
          </div>
          <h1 class="text-xl font-bold text-gray-800">Streamo<span class="text-primary-600">.id</span></h1>
        </div>
        <div class="flex items-center space-x-4">
          <a href="#" class="text-gray-600 hover:text-primary-600">
            <i class="fas fa-question-circle"></i>
          </a>
          <a href="#" class="text-gray-600 hover:text-primary-600">
            <i class="fas fa-bell"></i>
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
      <% if (invoice) { %>
        <!-- Success Card -->
        <div class="card bg-white p-6 mb-6 fade-in">
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 flex items-center justify-center rounded-full bg-success-50 mb-4 pulse">
              <i class="fas fa-check-circle text-success-600 text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Checkout Berhasil!</h1>
            <p class="text-gray-600 mb-4">Terima kasih <span class="font-semibold text-primary-600"><%= invoice.customerName %></span>, pesanan Anda telah tercatat</p>
            
            <!-- Countdown -->
            <div class="bg-gray-100 rounded-xl p-4 w-full max-w-md mb-4">
              <p class="text-sm text-gray-600 mb-2">Selesaikan pembayaran dalam:</p>
              <div class="countdown text-3xl font-bold text-red-600 mb-2" id="countdown">
                23:59:59
              </div>
              <p class="text-xs text-gray-500">
                Jatuh tempo: <span class="font-medium"><%= new Date(invoice.expiryDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></span>
              </p>
            </div>

            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 text-sm text-yellow-700 w-full max-w-md">
              <div class="flex items-start">
                <i class="fas fa-exclamation-triangle mt-0.5 mr-2"></i>
                <p>Yuk, buruan selesaikan pembayaran. Kami verifikasi pesanan kurang dari 15 menit setelah pembayaran berhasil dan paling lambat 1x24 jam.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <!-- Bank Transfer -->
          <div class="card bg-white p-6 bank-card fade-in">
            <h2 class="font-semibold text-gray-800 mb-4 text-lg flex items-center">
              <i class="fas fa-money-bill-transfer mr-2 text-primary-600"></i>
              Transfer Bank
            </h2>
            
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9e/Bank_Central_Asia_logo.svg/2560px-Bank_Central_Asia_logo.svg.png" 
                     alt="BCA" class="w-16 bank-logo mr-3">
                <div>
                  <p class="text-sm text-gray-600">Bank Central Asia (BCA)</p>
                  <p class="text-xs text-gray-500">a.n Yuli Naelul Muna</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 mb-4">
              <p class="text-xs text-gray-500 mb-1">Nomor Rekening</p>
              <div class="flex justify-between items-center">
                <p class="text-lg font-mono font-bold text-gray-800">1310493453</p>
                <button class="bg-primary-50 text-primary-600 px-3 py-1 rounded-lg text-sm hover:bg-primary-100 transition"
                        onclick="copyToClipboard('1310493453')">
                  <i class="fas fa-copy mr-1"></i> Salin
                </button>
              </div>
            </div>

            <div class="bg-blue-50 border border-blue-100 rounded-lg p-3 text-sm text-blue-700">
              <div class="flex items-start">
                <i class="fas fa-info-circle mt-0.5 mr-2"></i>
                <p>Transfer sesuai jumlah: <span class="font-bold">Rp <%= new Intl.NumberFormat('id-ID').format(invoice.amount) %></span></p>
              </div>
            </div>
          </div>

          <!-- Order Details -->
          <div class="card bg-white p-6 fade-in">
            <h2 class="font-semibold text-gray-800 mb-4 text-lg flex items-center">
              <i class="fas fa-receipt mr-2 text-primary-600"></i>
              Detail Pesanan
            </h2>
            
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Invoice ID</span>
                <span class="font-medium text-gray-800"><%= invoice.orderId %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Produk</span>
                <span class="font-medium text-gray-800"><%= invoice.subscription %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Durasi</span>
                <span class="font-medium text-gray-800"><%= invoice.duration || '1 Bulan' %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Status</span>
                <span class="font-medium capitalize px-2 py-1 rounded 
                  <%= invoice.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                     invoice.status === 'paid' ? 'bg-green-100 text-green-800' : 
                     'bg-gray-100 text-gray-800' %>">
                  <%= invoice.status %>
                </span>
              </div>
              <div class="border-t border-gray-200 pt-3 mt-2">
                <div class="flex justify-between text-lg font-bold">
                  <span class="text-gray-800">Total</span>
                  <span class="text-primary-600">Rp <%= new Intl.NumberFormat('id-ID').format(invoice.amount) %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Customer Information -->
        <div class="card bg-white p-6 mb-6 fade-in">
          <h2 class="font-semibold text-gray-800 mb-4 text-lg flex items-center">
            <i class="fas fa-user mr-2 text-primary-600"></i>
            Informasi Pelanggan
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-500 mb-1">Nama Lengkap</p>
              <p class="font-medium text-gray-800"><%= invoice.customerName %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500 mb-1">Email</p>
              <p class="font-medium text-gray-800"><%= invoice.customerEmail %></p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8 fade-in">
          <a href="/confirm-payment?transactionId=<%= invoice.orderId %>"
             class="flex-1 py-4 bg-success-600 text-white font-semibold rounded-lg hover:bg-success-700 transition flex items-center justify-center">
            <i class="fas fa-check-circle mr-2"></i>
            KONFIRMASI PEMBAYARAN
          </a>
          <button class="py-4 px-6 bg-white border border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition flex items-center justify-center">
            <i class="fas fa-download mr-2"></i>
            UNDUH INVOICE
          </button>
        </div>

        <!-- Help Section -->
        <div class="card bg-white p-6 fade-in">
          <h2 class="font-semibold text-gray-800 mb-4 text-lg flex items-center">
            <i class="fas fa-headset mr-2 text-primary-600"></i>
            Butuh Bantuan?
          </h2>
          <p class="text-gray-600 mb-4">Hubungi customer service kami untuk bantuan lebih lanjut</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="https://wa.me/628123456789" 
               class="py-3 px-6 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition flex items-center justify-center">
              <i class="fab fa-whatsapp mr-2 text-lg"></i>
              WhatsApp: 08123456789
            </a>
            <a href="mailto:support@streamo.id"
               class="py-3 px-6 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition flex items-center justify-center">
              <i class="fas fa-envelope mr-2"></i>
              Email Support
            </a>
          </div>
        </div>

      <% } else { %>
        <!-- No Invoice State -->
        <div class="card bg-white p-8 text-center fade-in">
          <div class="max-w-md mx-auto">
            <div class="w-20 h-20 mx-auto flex items-center justify-center rounded-full bg-primary-50 mb-6">
              <i class="fas fa-receipt text-primary-600 text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Cek Status Pesanan</h1>
            <p class="text-gray-600 mb-6">Masukkan Transaction ID untuk melihat detail invoice dan instruksi pembayaran</p>
            
            <form action="/checkout-manual" method="GET" class="flex flex-col sm:flex-row gap-2 mb-6">
              <input type="text" name="transactionId" placeholder="Masukkan Transaction ID" 
                     class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <button type="submit" 
                      class="px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition">
                <i class="fas fa-search mr-2"></i>Cari
              </button>
            </form>
            
            <div class="bg-gray-50 rounded-lg p-4 text-left">
              <p class="text-sm font-medium text-gray-700 mb-2">Tidak memiliki Transaction ID?</p>
              <p class="text-sm text-gray-600">Hubungi customer service kami untuk bantuan lebih lanjut</p>
              <a href="https://wa.me/628123456789" class="inline-flex items-center mt-2 text-primary-600 hover:text-primary-700 text-sm">
                <i class="fab fa-whatsapp mr-2"></i>
                WhatsApp: 08123456789
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 py-6 mt-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <p class="text-gray-500 text-sm mb-4 md:mb-0">© 2023 Streamo.id. All rights reserved.</p>
          <div class="flex space-x-6">
            <a href="#" class="text-gray-500 hover:text-primary-600 text-sm">Syarat & Ketentuan</a>
            <a href="#" class="text-gray-500 hover:text-primary-600 text-sm">Kebijakan Privasi</a>
            <a href="#" class="text-gray-500 hover:text-primary-600 text-sm">Bantuan</a>
          </div>
        </div>
      </div>
    </footer>
  </div>

  <script>
    // Countdown Timer
    function updateCountdown() {
      <% if (invoice) { %>
        const expiryDate = new Date('<%= invoice.expiryDate %>');
        const now = new Date();
        const diff = expiryDate - now;

        if (diff <= 0) {
          document.getElementById("countdown").textContent = "00:00:00";
          document.getElementById("countdown").classList.add("text-red-700");
          return;
        }

        const h = Math.floor(diff / (1000 * 60 * 60));
        const m = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        const s = Math.floor((diff % (1000 * 60)) / 1000);

        document.getElementById("countdown").textContent =
          `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
      <% } %>
    }

    // Copy to clipboard function
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        // Show feedback
        const button = event.currentTarget;
        const originalHtml = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check mr-1"></i> Tersalin!';
        button.classList.remove('bg-primary-50', 'text-primary-600');
        button.classList.add('bg-green-100', 'text-green-700');
        
        setTimeout(() => {
          button.innerHTML = originalHtml;
          button.classList.remove('bg-green-100', 'text-green-700');
          button.classList.add('bg-primary-50', 'text-primary-600');
        }, 2000);
      }).catch(err => {
        console.error('Failed to copy: ', err);
      });
    }

    // Initialize countdown if invoice exists
    <% if (invoice) { %>
      setInterval(updateCountdown, 1000);
      updateCountdown();
    <% } %>
  </script>
</body>
</html>