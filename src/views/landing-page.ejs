    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f5ff',
                            100: '#e5edff',
                            500: '#4e73df',
                            600: '#3a56c4',
                            700: '#2e4a9e',
