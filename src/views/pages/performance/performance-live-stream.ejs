<% layout("layouts/main") %>
<div class="min-h-screen bg-gray-50 overflow-hidden">
    <!-- Performance Live Stream Table -->
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid rounded-2xl bg-clip-border shadow-soft-xl">
                <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                    <div class="flex flex-wrap justify-between items-center">
                        <!-- Judul dengan icon -->
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-lg">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <h6 class="text-xl font-semibold text-gray-800">History Live Stream</h6>
                        </div>

                        <!-- Filter Controls -->
                        <div class="flex items-center gap-3 flex-wrap">
                            <!-- Search Input -->
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                </div>
                                <input type="text" id="search-input" value="<%= filters.search %>" 
                                       placeholder="Cari akun, judul, atau studio..."
                                       class="w-64 border border-gray-300 rounded-lg pl-10 pr-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-soft-sm">
                            </div>

                            <!-- Filter Akun -->
                            <div class="relative">
                                <select id="account-filter" class="w-48 border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-soft-sm">
                                    <option value="">üì± Semua Akun</option>
                                    <% akunList.forEach(akun => { %>
                                        <option value="<%= akun.id %>" <%= filters.akunId === akun.id ? 'selected' : '' %>>
                                            <%= akun.nama_akun %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>

                            <!-- Filter Studio -->
                            <div class="relative">
                                <select id="studio-filter" class="w-48 border border-gray-300 rounded-lg px-4 py-2.5 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-soft-sm">
                                    <option value="">üè¢ Semua Studio</option>
                                    <% studioList.forEach(studio => { %>
                                        <option value="<%= studio.id %>" <%= filters.studioId === studio.id ? 'selected' : '' %>>
                                            <%= studio.nama_studio %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>

                            <!-- Filter Tanggal -->
                            <div class="flex items-center gap-2 bg-gray-50 rounded-lg p-1">
                                <div class="relative">
                                    <input type="date" id="start-date" value="<%= filters.startDate %>" 
                                           class="w-32 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-soft-sm">
                                </div>
                                <span class="text-gray-500 text-sm">‚Üí</span>
                                <div class="relative">
                                    <input type="date" id="end-date" value="<%= filters.endDate %>"
                                           class="w-32 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-soft-sm">
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex items-center gap-2">
                                <button id="apply-filter" class="flex items-center gap-2 px-5 py-2.5 text-sm font-semibold text-white transition-all bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-lg ease-soft-in tracking-tight-soft shadow-soft-md bg-150 bg-x-25 hover:shadow-soft-lg hover:scale-102 active:opacity-85">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                                    </svg>
                                    Terapkan
                                </button>
                                
                                <button id="reset-filter" class="flex items-center gap-2 px-4 py-2.5 text-sm font-semibold text-gray-700 border border-gray-300 rounded-lg transition-all hover:bg-gray-50 hover:shadow-soft-sm focus:ring-2 focus:ring-gray-400 active:scale-95">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                    </svg>
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Summary Stats -->
                    <% if (performances.length > 0) { %>
                    <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
                        <div class="bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-lg p-4 text-white shadow-soft-md">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm opacity-80">Total Views</p>
                                    <p class="text-2xl font-bold">
                                        <%= performances.reduce((sum, p) => sum + p.totalViews, 0).toLocaleString() %>
                                    </p>
                                </div>
                                <svg class="w-8 h-8 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-gradient-to-tl from-green-600 to-emerald-400 rounded-lg p-4 text-white shadow-soft-md">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm opacity-80">Total Orders</p>
                                    <p class="text-2xl font-bold">
                                        <%= performances.reduce((sum, p) => sum + p.placedOrders, 0).toLocaleString() %>
                                    </p>
                                </div>
                                <svg class="w-8 h-8 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-gradient-to-tl from-purple-600 to-pink-400 rounded-lg p-4 text-white shadow-soft-md">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm opacity-80">Total Sales</p>
                                    <p class="text-2xl font-bold">
                                        Rp <%= performances.reduce((sum, p) => sum + p.placedSalesAmount, 0).toLocaleString('id-ID') %>
                                    </p>
                                </div>
                                <svg class="w-8 h-8 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-gradient-to-tl from-orange-600 to-yellow-400 rounded-lg p-4 text-white shadow-soft-md">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm opacity-80">Avg. Duration</p>
                                    <p class="text-2xl font-bold">
                                        <% 
                                            const avgDuration = performances.reduce((sum, p) => sum + p.durationMs, 0) / performances.length;
                                            const hours = Math.floor(avgDuration / 3600000);
                                            const minutes = Math.floor((avgDuration % 3600000) / 60000);
                                        %>
                                        <%= hours %>h <%= minutes %>m
                                    </p>
                                </div>
                                <svg class="w-8 h-8 opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>

                <div class="flex-auto px-0 pt-0 pb-2">
                    <div class="p-0 overflow-x-auto">
                        <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <span>No</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                            </svg>
                                            <span>Akun</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-8 0H3m2 0h4M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                            </svg>
                                            <span>Studio</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                            </svg>
                                            <span>Judul Live</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                            <span>Views</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                                            </svg>
                                            <span>Likes</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                                            </svg>
                                            <span>Comments</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                            </svg>
                                            <span>Viewers</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                                            </svg>
                                            <span>Orders</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span>Sales</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span>Durasi</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                            <span>Tanggal</span>
                                        </div>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">
                                        <div class="flex items-center gap-1">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span>Status</span>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (performances.length === 0) { %>
                                    <tr>
                                        <td colspan="13" class="text-center py-8">
                                            <div class="flex flex-col items-center justify-center text-gray-400">
                                                <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                                </svg>
                                                <p class="text-lg font-medium mb-2">Tidak ada data live stream</p>
                                                <p class="text-sm">
                                                    <% if (filters.akunId || filters.studioId || filters.startDate || filters.endDate || filters.search) { %>
                                                        Coba ubah filter atau pencarian
                                                    <% } else { %>
                                                        Mulai live stream untuk melihat data performance
                                                    <% } %>
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } else { %>
                                    <% performances.forEach((performance, index) => { %>
                                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-medium text-gray-600"><%= (currentPage - 1) * limit + index + 1 %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <div class="flex items-center gap-2">
                                                    <div class="w-8 h-8 bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-full flex items-center justify-center">
                                                        <span class="text-xs font-bold text-white uppercase">
                                                            <%= performance.akun.nama_akun ? performance.akun.nama_akun.charAt(0) : 'A' %>
                                                        </span>
                                                    </div>
                                                    <span class="text-sm font-medium text-gray-800"><%= performance.akun.nama_akun %></span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-medium text-gray-600">
                                                    <%= performance.akun.studio ? performance.akun.studio.nama_studio : 'Tidak ada studio' %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-medium text-gray-800" title="<%= performance.title %>">
                                                    <%= performance.title.length > 25 ? performance.title.substring(0, 25) + '...' : performance.title %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-blue-600"><%= performance.totalViews.toLocaleString() %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-pink-600"><%= performance.totalLikes.toLocaleString() %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-green-600"><%= performance.totalComments.toLocaleString() %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-purple-600"><%= performance.uniqueViewers.toLocaleString() %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-orange-600"><%= performance.placedOrders.toLocaleString() %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-bold text-emerald-600">Rp <%= performance.placedSalesAmount.toLocaleString('id-ID') %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm font-medium text-gray-600">
                                                    <%= Math.floor(performance.durationMs / 3600000) %>h 
                                                    <%= Math.floor((performance.durationMs % 3600000) / 60000) %>m
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="text-sm text-gray-600"><%= new Date(performance.startTime).toLocaleDateString('id-ID', { 
                                                    day: '2-digit', 
                                                    month: 'short', 
                                                    year: 'numeric',
                                                    hour: '2-digit',
                                                    minute: '2-digit'
                                                }) %></span>
                                            </td>
                                            <td class="px-6 py-4 align-middle border-b whitespace-nowrap">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                                    <%= performance.statusCode === 200 ? 
                                                        'bg-green-100 text-green-800' : 
                                                        'bg-red-100 text-red-800' %>">
                                                    <%= performance.statusCode === 200 ? '‚úÖ Success' : '‚ùå Error' %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                    <div class="flex flex-col md:flex-row items-center justify-between px-6 py-4 border-t border-gray-200">
                        <div class="flex-1 flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-700">
                                    Menampilkan
                                    <span class="font-medium"><%= (currentPage - 1) * limit + 1 %></span>
                                    sampai
                                    <span class="font-medium"><%= Math.min(currentPage * limit, totalCount) %></span>
                                    dari
                                    <span class="font-medium"><%= totalCount %></span>
                                    hasil
                                </p>
                            </div>
                            <div class="flex items-center gap-4">
                                <div class="flex items-center text-sm text-gray-600">
                                    <span>Baris per halaman:</span>
                                    <select id="rows-per-page" class="ml-2 border border-gray-300 rounded-lg px-2 py-1 text-sm">
                                        <option value="15" <%= limit == 15 ? 'selected' : '' %>>15</option>
                                        <option value="30" <%= limit == 30 ? 'selected' : '' %>>30</option>
                                        <option value="50" <%= limit == 50 ? 'selected' : '' %>>50</option>
                                        <option value="100" <%= limit == 100 ? 'selected' : '' %>>100</option>
                                    </select>
                                </div>
                                
                                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                                    <% if (currentPage > 1) { %>
                                        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %><%= filters.akunId ? '&akunId=' + filters.akunId : '' %><%= filters.studioId ? '&studioId=' + filters.studioId : '' %><%= filters.startDate ? '&startDate=' + filters.startDate : '' %><%= filters.endDate ? '&endDate=' + filters.endDate : '' %><%= filters.search ? '&search=' + filters.search : '' %>"
                                           class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-colors">
                                            <span class="sr-only">Previous</span>
                                            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    <% } %>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <% if (i === currentPage) { %>
                                            <span class="relative inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-50 text-sm font-medium text-blue-600">
                                                <%= i %>
                                            </span>
                                        <% } else if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) { %>
                                            <a href="?page=<%= i %>&limit=<%= limit %><%= filters.akunId ? '&akunId=' + filters.akunId : '' %><%= filters.studioId ? '&studioId=' + filters.studioId : '' %><%= filters.startDate ? '&startDate=' + filters.startDate : '' %><%= filters.endDate ? '&endDate=' + filters.endDate : '' %><%= filters.search ? '&search=' + filters.search : '' %>"
                                               class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-colors">
                                                <%= i %>
                                            </a>
                                        <% } else if (i === currentPage - 2 || i === currentPage + 2) { %>
                                            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500">
                                                ...
                                            </span>
                                        <% } %>
                                    <% } %>
                                    
                                    <% if (currentPage < totalPages) { %>
                                        <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %><%= filters.akunId ? '&akunId=' + filters.akunId : '' %><%= filters.studioId ? '&studioId=' + filters.studioId : '' %><%= filters.startDate ? '&startDate=' + filters.startDate : '' %><%= filters.endDate ? '&endDate=' + filters.endDate : '' %><%= filters.search ? '&search=' + filters.search : '' %>"
                                           class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-colors">
                                            <span class="sr-only">Next</span>
                                            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    <% } %>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let searchTimeout;
    
    // Apply filter button
    document.getElementById('apply-filter').addEventListener('click', function() {
        applyFilters();
    });

    // Reset filter button
    document.getElementById('reset-filter').addEventListener('click', function() {
        window.location.href = '?page=1&limit=<%= limit %>';
    });

    // Rows per page change
    document.getElementById('rows-per-page').addEventListener('change', function() {
        applyFilters(1, this.value);
    });

    // Real-time search
    document.getElementById('search-input').addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            applyFilters(1);
        }, 500); // Delay 500ms setelah user berhenti mengetik
    });

    // Enter key to apply filter
    ['start-date', 'end-date', 'search-input'].forEach(id => {
        document.getElementById(id).addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                applyFilters();
            }
        });
    });

    function applyFilters(page = 1, newLimit = '<%= limit %>') {
        const akunId = document.getElementById('account-filter').value;
        const studioId = document.getElementById('studio-filter').value;
        const startDate = document.getElementById('start-date').value;
        const endDate = document.getElementById('end-date').value;
        const search = document.getElementById('search-input').value;
        
        let url = `?page=${page}&limit=${newLimit}`;
        if (akunId) url += '&akunId=' + akunId;
        if (studioId) url += '&studioId=' + studioId;
        if (startDate) url += '&startDate=' + startDate;
        if (endDate) url += '&endDate=' + endDate;
        if (search) url += '&search=' + encodeURIComponent(search);
        
        window.location.href = url;
    }

    // Add subtle animations
    const tableRows = document.querySelectorAll('tbody tr');
    tableRows.forEach((row, index) => {
        row.style.opacity = '0';
        row.style.transform = 'translateY(20px)';
        row.style.transition = 'all 0.3s ease';
        
        setTimeout(() => {
            row.style.opacity = '1';
            row.style.transform = 'translateY(0)';
        }, index * 50);
    });
});
</script>

